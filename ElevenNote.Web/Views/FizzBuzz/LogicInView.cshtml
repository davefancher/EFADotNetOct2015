
@{
    ViewBag.Title = "FizzBuzz";
}

<h2>@ViewBag.Message</h2>

@functions {
    string ToFizzBuzz(int value)
    {
        if (value % 3 == 0 && value % 5 == 0)
        {
            return "FizzBuzz";
        }

        if (value % 3 == 0)
        {
            return "Fizz";
        }

        if (value % 5 == 0)
        {
            return "Buzz";
        }

        return value.ToString();
    }

}

@Html.ListBox(
    "selection",
    Enumerable
        .Range(1, 100)
        .Select(ToFizzBuzz)
        .Select(n => new SelectListItem { Text = n }),
    new { size = 20 })
